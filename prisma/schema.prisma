generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sorcerer {
  id        String   @id @default(uuid())
  identity  String   @unique
  name      String
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdSpells Spell[]
  spells        SpellCasters[]

  @@map(name: "sorcerers")
}

model Spell {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  creator   Sorcerer       @relation(fields: [creatorId], references: [id])
  creatorId String
  casters   SpellCasters[]

  @@map(name: "spells")
}

model SpellCasters {
  Sorcerer   Sorcerer @relation(fields: [sorcererId], references: [id])
  sorcererId String
  Spell      Spell    @relation(fields: [spellId], references: [id])
  spellId    String

  @@id([sorcererId, spellId])
}
